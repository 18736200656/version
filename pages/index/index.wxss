/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.flex-wrap-row{
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
 
  display: flex;
  justify-content: space-around;
  align-content: center;
}
.flex-item{
  height:80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.img{
  width:100%;
  height: 40px;
}
.text-color{
  font-size: 20px;
  font-weight: 700;
}
.hover-style{
  background: #ff0;
  color: #ddd;
}

/*轮播图*/
.swiper{
  width:750rpx;
  margin-top:10px;
}
.slide-image{
  width:750rpx;
  height: 484rpx;
}